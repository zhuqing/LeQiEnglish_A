<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ywl="http://schemas.android.com/apk/res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no3_white"
    >



    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/loading_progress_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
      >


        <com.leqienglish.view.LoadingView
            android:id="@+id/loading_progress_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            ywl:dptextsize="14sp"></com.leqienglish.view.LoadingView>
    </RelativeLayout>

    <TextView
        android:id="@+id/logding_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_progress_center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>