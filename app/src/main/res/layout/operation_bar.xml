<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/operationbar_background"
    android:orientation="horizontal">

    <com.leqienglish.view.operation.OperationBarItem
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:id="@+id/operation_bar_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgrond_right_grey"
        cus:background_image="@drawable/content"
        cus:title="文稿">

    </com.leqienglish.view.operation.OperationBarItem>

    <com.leqienglish.view.operation.OperationBarItem
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/backgrond_right_grey"
        android:id="@+id/operation_bar_heart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cus:background_image="@drawable/heart"
        cus:title="点赞">

    </com.leqienglish.view.operation.OperationBarItem>


    <com.leqienglish.view.operation.OperationBarItem
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:id="@+id/operation_bar_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cus:background_image="@drawable/share"
        cus:title="分享">

    </com.leqienglish.view.operation.OperationBarItem>

</LinearLayout>