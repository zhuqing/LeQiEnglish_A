<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_recite_article_info_root"
    android:layout_height="match_parent">
  <com.leqienglish.view.article.ArticleInfoView
      android:id="@+id/add_recite_article_info_view"
      android:layout_width="wrap_content"
      android:layout_height="match_parent">

  </com.leqienglish.view.article.ArticleInfoView>




  <com.leqienglish.view.operation.OperationBar
      android:id="@+id/add_recite_article_info_operationBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      cus:items="return|audioPlay|hearted|share"></com.leqienglish.view.operation.OperationBar>
  <Button
      android:id="@+id/add_recite_article_info_button"
      android:text="@string/add_article_to_recite"
      style="@style/button_white"
      android:background="@drawable/background_green_corner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="20dp"
      android:layout_marginLeft="20dp"
      android:layout_above="@id/add_recite_article_info_operationBar"
      android:layout_marginBottom="10dp"/>

</RelativeLayout>
