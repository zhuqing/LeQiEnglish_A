<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/reciting_article_list_root">

<RadioGroup
    android:id="@+id/reciting_article_list_radiogroiup"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:checkedButton="@id/reciting_article_list_recited"
    android:layout_height="40dp">
    <RadioButton
        android:id="@+id/reciting_article_list_recited"
        android:text="@string/recited_article"
        android:layout_weight="1"
        style="@style/font_size_20_black"
        android:gravity="center"
        android:background="@drawable/radiobutton_group"
        android:button="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RadioButton
        android:id="@+id/reciting_article_list_reciting"
        android:layout_weight="1"
        android:button="@null"
        android:gravity="center"

        style="@style/font_size_20_black"
        android:background="@drawable/radiobutton_group"
        android:text="@string/reciting_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RadioGroup>
<GridView
    android:id="@+id/reciting_acticle_list_gridview"
    android:numColumns="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></GridView>
</LinearLayout>
