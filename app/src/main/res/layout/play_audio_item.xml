<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/backgrond_top_bottom_grey"
    >



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

            <TextView
                android:id="@+id/play_audio_text"
                android:textIsSelectable="true"
                style="@style/font_size_16_black_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />

            <TextView
                style="@style/font_size_12_gray"
                android:id="@+id/play_audio_text_ch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/play_audio_text"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:id="@+id/play_audio_playerpane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>