<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            style="@style/font_size_20_black"
            android:id="@+id/update_recite_words_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日背诵单词个数："/>

        <EditText


            android:digits="@string/numberbl_digits"
            android:background="@drawable/boarder_black"
            android:layout_weight="3"
            android:id="@+id/update_recite_words_number_num"
            android:layout_width="70dp"
            android:layout_height="40dp" />
    </LinearLayout>


</RelativeLayout>