<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/article_info_title"
        android:gravity="center_horizontal"
        style="@style/font_size_18_black_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Honor of Serving You as President" />




    <TextView

        android:id="@+id/article_info_has"
        android:layout_marginTop="10dp"
        android:layout_below="@id/article_info_title"
        style="@style/font_size_20_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已有100K人背过" />


    <TextView

        android:id="@+id/article_info_percent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/article_info_has"
        style="@style/font_size_20_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您已完成0%" />

    <TextView

        android:id="@+id/article_info_words"
        android:layout_marginTop="20dp"
        android:layout_below="@id/article_info_percent"
        style="@style/font_size_20_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开单词列表>" />


    <GridView
        android:id="@+id/article_info_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:horizontalSpacing="20dp"
        android:verticalSpacing="20dp"

        android:layout_below="@id/article_info_words"
        android:numColumns="3"></GridView>


</RelativeLayout>
