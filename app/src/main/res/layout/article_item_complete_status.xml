<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="240dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.leqienglish.view.image.RoundImageView
            android:id="@+id/article_item_complete_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            cus:type="1"
            cus:roundRadius="30"
            android:src="@drawable/obm"

            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <com.leqienglish.view.percent.CirclePrecentView
                    android:id="@+id/article_item_complete_circle"
                    cus:precent="0.82"
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/article_item_complete_percent"
                    style="@style/font_size_16_white"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/article_item_complete_circle"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="完成 20%" />
            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/article_item_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/font_size_16_black"
        android:text="The Honor of Serving You as President" />
</RelativeLayout>
