<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">
<TextView
    android:id="@+id/shortword_simple_info_word"
    style="@style/font_size_18_black_bold"
    android:text="It's up to... "
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="3dp"
        style="@style/font_size_12_gray"
        android:text="由……来决定"
        android:id="@+id/shortword_simple_info_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/shortword_simple_info_sentences"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>