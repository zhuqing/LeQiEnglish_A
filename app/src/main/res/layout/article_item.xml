<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cus="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="250dp">
    <com.leqienglish.view.image.RoundImageView

        cus:type="1"
        cus:roundRadius="30"
        android:src="@drawable/obm"
        android:id="@+id/article_item_image"
android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="200dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/article_item_title"
        android:layout_marginTop="5dp"
        android:layout_below="@id/article_item_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        style="@style/font_size_14_black"
        android:text="The Honor of Serving You as President"/>
</RelativeLayout>
